/* ========================================
   故障文字效果
   ======================================== */
.glitch {
    position: relative;
    color: var(--primary-color);
    animation: glitch-skew 3s infinite;
}

.glitch::before,
.glitch::after {
    content: attr(data-text);
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}

.glitch::before {
    left: 2px;
    text-shadow: -2px 0 #ff00ff;
    clip: rect(44px, 450px, 56px, 0);
    animation: glitch-anim 5s infinite linear alternate-reverse;
}

.glitch::after {
    left: -2px;
    text-shadow: -2px 0 #00ffff;
    clip: rect(44px, 450px, 56px, 0);
    animation: glitch-anim2 5s infinite linear alternate-reverse;
}

@keyframes glitch-anim {
    0% { clip: rect(10px, 9999px, 31px, 0); }
    20% { clip: rect(85px, 9999px, 140px, 0); }
    40% { clip: rect(62px, 9999px, 89px, 0); }
    60% { clip: rect(23px, 9999px, 99px, 0); }
    80% { clip: rect(140px, 9999px, 12px, 0); }
    100% { clip: rect(75px, 9999px, 68px, 0); }
}

@keyframes glitch-anim2 {
    0% { clip: rect(65px, 9999px, 119px, 0); }
    20% { clip: rect(23px, 9999px, 45px, 0); }
    40% { clip: rect(142px, 9999px, 11px, 0); }
    60% { clip: rect(98px, 9999px, 66px, 0); }
    80% { clip: rect(31px, 9999px, 154px, 0); }
    100% { clip: rect(55px, 9999px, 89px, 0); }
}

@keyframes glitch-skew {
    0% { transform: skew(0deg); }
    10% { transform: skew(2deg); }
    20% { transform: skew(-2deg); }
    30% { transform: skew(1deg); }
    40% { transform: skew(-1deg); }
    50% { transform: skew(0deg); }
    100% { transform: skew(0deg); }
}

