<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>轮播测试</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            background: #0a0e27;
            color: #e0e0e0;
            padding: 50px;
            font-family: Arial, sans-serif;
        }
        
        .carousel-container {
            display: flex;
            align-items: center;
            gap: 20px;
            max-width: 1400px;
            margin: 0 auto;
        }
        
        .nav-btn {
            width: 60px;
            height: 60px;
            background: rgba(0, 255, 255, 0.2);
            border: 2px solid #00ffff;
            border-radius: 50%;
            color: #00ffff;
            font-size: 24px;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-shrink: 0;
        }
        
        .nav-btn:hover {
            background: #00ffff;
            color: #0a0e27;
        }
        
        .carousel-wrapper {
            flex: 1;
            overflow: hidden;
        }
        
        .carousel {
            display: flex;
            gap: 30px;
            transition: transform 0.5s ease;
        }
        
        .card {
            min-width: calc(33.333% - 20px);
            max-width: calc(33.333% - 20px);
            height: 300px;
            background: rgba(0, 255, 255, 0.1);
            border: 1px solid #00ffff;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 24px;
            flex-shrink: 0;
        }
        
        .indicators {
            display: flex;
            justify-content: center;
            gap: 10px;
            margin-top: 20px;
        }
        
        .dot {
            width: 10px;
            height: 10px;
            background: rgba(0, 255, 255, 0.3);
            border: 1px solid #00ffff;
            border-radius: 50%;
            cursor: pointer;
        }
        
        .dot.active {
            background: #00ffff;
        }
    </style>
</head>
<body>
    <h1 style="text-align: center; margin-bottom: 30px;">轮播测试</h1>
    
    <div class="carousel-container">
        <button class="nav-btn" id="prevBtn">←</button>
        
        <div class="carousel-wrapper">
            <div class="carousel" id="carousel">
                <div class="card">卡片 1</div>
                <div class="card">卡片 2</div>
                <div class="card">卡片 3</div>
                <div class="card">卡片 4</div>
                <div class="card">卡片 5</div>
                <div class="card">卡片 6</div>
            </div>
        </div>
        
        <button class="nav-btn" id="nextBtn">→</button>
    </div>
    
    <div class="indicators" id="indicators"></div>
    
    <script>
        const carousel = document.getElementById('carousel');
        const prevBtn = document.getElementById('prevBtn');
        const nextBtn = document.getElementById('nextBtn');
        const indicators = document.getElementById('indicators');
        
        const originalCards = Array.from(carousel.querySelectorAll('.card'));
        const total = originalCards.length;
        let currentIndex = 0;
        let isTransitioning = false;
        
        // 设置无限循环
        function setup() {
            carousel.innerHTML = '';
            
            // 克隆最后3个到开头
            for (let i = total - 3; i < total; i++) {
                const clone = originalCards[i].cloneNode(true);
                carousel.appendChild(clone);
            }
            
            // 添加原始卡片
            originalCards.forEach(card => carousel.appendChild(card));
            
            // 克隆前3个到末尾
            for (let i = 0; i < 3; i++) {
                const clone = originalCards[i].cloneNode(true);
                carousel.appendChild(clone);
            }
            
            currentIndex = 3;
            updatePosition(false);
        }
        
        // 创建指示器
        function createIndicators() {
            for (let i = 0; i < total; i++) {
                const dot = document.createElement('div');
                dot.className = 'dot';
                if (i === 0) dot.classList.add('active');
                dot.addEventListener('click', () => goTo(i));
                indicators.appendChild(dot);
            }
        }
        
        // 更新指示器
        function updateIndicators() {
            const dots = indicators.querySelectorAll('.dot');
            const realIndex = (currentIndex - 3 + total) % total;
            dots.forEach((dot, i) => {
                dot.classList.toggle('active', i === realIndex);
            });
        }
        
        // 更新位置
        function updatePosition(animate = true) {
            const cards = carousel.querySelectorAll('.card');
            const cardWidth = cards[0].offsetWidth + 30; // 卡片宽度 + gap
            const offset = -currentIndex * cardWidth;
            
            carousel.style.transition = animate ? 'transform 0.5s ease' : 'none';
            carousel.style.transform = `translateX(${offset}px)`;
            updateIndicators();
            
            console.log('更新:', { currentIndex, realIndex: currentIndex - 3, cardWidth, offset });
        }
        
        // 跳转
        function goTo(index) {
            if (isTransitioning) return;
            currentIndex = index + 3;
            updatePosition();
        }
        
        // 上一个
        function prev() {
            if (isTransitioning) return;
            console.log('← 上一个');
            isTransitioning = true;
            
            currentIndex--;
            updatePosition();
            
            setTimeout(() => {
                if (currentIndex < 3) {
                    currentIndex = total + 2;
                    updatePosition(false);
                }
                isTransitioning = false;
            }, 500);
        }
        
        // 下一个
        function next() {
            if (isTransitioning) return;
            console.log('→ 下一个');
            isTransitioning = true;
            
            currentIndex++;
            updatePosition();
            
            setTimeout(() => {
                if (currentIndex >= total + 3) {
                    currentIndex = 3;
                    updatePosition(false);
                }
                isTransitioning = false;
            }, 500);
        }
        
        // 绑定事件
        prevBtn.addEventListener('click', prev);
        nextBtn.addEventListener('click', next);
        
        // 键盘
        document.addEventListener('keydown', (e) => {
            if (e.key === 'ArrowLeft') prev();
            if (e.key === 'ArrowRight') next();
        });
        
        // 初始化
        setup();
        createIndicators();
        
        // 延迟更新
        setTimeout(() => updatePosition(false), 100);
    </script>
</body>
</html>
